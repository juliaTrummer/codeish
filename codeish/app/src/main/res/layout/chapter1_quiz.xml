<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quziLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="@dimen/headerTextSize"
        android:text="Question 1"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="163dp"
        android:textAlignment="center"
        android:textSize="@dimen/text"
        android:text="WÃ¤hle einen Gegenstand aus."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <ImageButton
            android:id="@+id/imageButton0"
            android:layout_width="261dp"
            android:layout_height="247dp"
            android:layout_marginTop="127dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintBottom_toTopOf="@+id/nametag0"
            app:layout_constraintEnd_toStartOf="@+id/imageButton1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageButton>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="261dp"
            android:layout_height="247dp"
            android:layout_marginTop="127dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintBottom_toTopOf="@+id/nametag2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton1"
            app:layout_constraintTop_toTopOf="parent">
        </ImageButton>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="261dp"
            android:layout_height="247dp"
            android:layout_marginTop="127dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintBottom_toTopOf="@+id/nametag1"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            app:layout_constraintStart_toEndOf="@+id/imageButton0"
            app:layout_constraintTop_toTopOf="parent">
        </ImageButton>

        <TextView
            android:id="@+id/nametag0"
            android:layout_width="261dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="63dp"
            android:textAlignment="center"
            android:textSize="@dimen/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nametag1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton0" />

        <TextView
            android:id="@+id/nametag1"
            android:layout_width="261dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="63dp"
            android:textAlignment="center"
            android:textSize="@dimen/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nametag2"
            app:layout_constraintStart_toEndOf="@+id/nametag0"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/nametag2"
            android:layout_width="261dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="63dp"
            android:textAlignment="center"
            android:textSize="@dimen/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nametag1"
            app:layout_constraintTop_toBottomOf="@+id/imageButton1" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="2dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>